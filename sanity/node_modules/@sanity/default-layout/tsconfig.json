{
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.test.ts", "src/**/*.test.tsx"],
  "exclude": ["src/**/*.test.ts"],
  "compilerOptions": {
    "strict": false,
    "jsx": "react",
    "outDir": "./lib",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.css$"
        }
      }
    ],
    "esModuleInterop": true
  },
  "files": ["src/Root.tsx"],
}
